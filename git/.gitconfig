[user]
	email = jason@jpleau.ca
	name = Jason Pleau
[color]
	ui = true
	branch = auto
	diff = auto
	interactive = auto
	status = auto

[core]
	editor = vim
[alias]
	s = status -sb
	co = checkout
	ci = commit
[pager]
	diff = cat
[push]
	default = current

[pull]
	default = current

[alias]
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(cyan)<%an>%Creset' --abbrev-commit --date=relative
[http]
	sslverify = false
